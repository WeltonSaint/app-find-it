    <li>
      <div class="userView">
        <div class="background">
          <img width="300" src="/images/nav_header.png" >
        </div>
        <% var photoUser = (user.linkFotoCliente) ? user.linkFotoCliente : "/images/profile.png" %>        
        <a href="#!user"><img class="circle" src="<%= photoUser %>"></a>
        <a href="#!name"><span class="white-text name"><%= user.nomeCliente %></span></a>
        <a href="#!email"><span class="white-text email"><%= user.emailCliente %></span></a>
      </div>
    </li>
    <% if (value == "Meus Itens") { %>
    <li class="active">
    <% } else { %>
    <li>
