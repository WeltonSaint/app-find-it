    <nav>		
      <div class="nav-wrapper color-primary">
        <a href="#" data-activates="nav-menu" class="button-collapse show-on-large"><i class="material-icons">menu</i></a>
        <a href="#" class="brand-logo center">Find-It</a>
        <ul class="right">
          <li><a href="/logout"><i class="material-icons">exit_to_app</i></a></li>
