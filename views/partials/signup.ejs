<form class="panel-group">
    <div class="login-input row card-panel">
        <div class="input-field">
            <i class="material-icons prefix">face</i>
            <input id="full_name" type="text" class="validate">
            <label for="full_name">Nome Completo</label>
        </div>
    </div>
    <div class="login-input row card-panel">
        <div class="input-field">
            <i class="material-icons prefix">local_post_office</i>
            <input id="email" type="email" class="validate">
            <label for="email">Email</label>
        </div>
    </div>
    <div class="login-input row card-panel">
        <div class="input-field">
            <i class="material-icons prefix">vpn_key</i>
            <input id="password" type="password" class="validate">
            <label for="password">Senha</label>
        </div>
    </div>
    <div class="login-input row card-panel">
        <div class="input-field">
            <i class="material-icons prefix">vpn_key</i>
            <input id="repeat_password" type="password" class="validate">
            <label for="repeat_password">Repita a Senha</label>
        </div>
    </div>                
    <div class="row">
        <button class="color-primary btn max-width waves-effect waves-light">Cadastrar</button>
    </div>
</form>